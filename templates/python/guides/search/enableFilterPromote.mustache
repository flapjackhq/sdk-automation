from flapjacksearch.search.models.anchoring import Anchoring
from flapjacksearch.search.models.condition import Condition
from flapjacksearch.search.models.consequence import Consequence
from flapjacksearch.search.models.rule import Rule


condition = Condition(
  anchoring=Anchoring.IS,
  pattern="{facet:brand}",
)

consequence = Consequence(
  filter_promotes=True,
)

rule = Rule(
  enabled=True,
  object_id="rule_with_filterPromotes",
  conditions=[condition],
  consequence=consequence,
)